<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gigver_primary"
    android:paddingBottom="20dp"
    >


    <TextView
        android:id="@+id/postSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/archivo_black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Looking for errand boy"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerImage" />

    <TextView
        android:id="@+id/postDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/quicksand"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Need extra manpower for lifting deliverables to car and to site."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/postSubject"
        app:layout_constraintRight_toRightOf="@id/postSubject"
        app:layout_constraintTop_toBottomOf="@+id/postSubject" />

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_image1"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="55dp" />
</androidx.constraintlayout.widget.ConstraintLayout>